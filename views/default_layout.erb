  <div class="driving_input">
    <div class="field">
      <form id="direction_inputs" action="form_action.asp">
          Origin: <input class="narrow input" type="text" id="origin"  placeholder="Boston, MA" name="origin">
          Destination: <input class="narrow input" type="text" id="destination" placeholder="General Assembly, NY" name="destination">

